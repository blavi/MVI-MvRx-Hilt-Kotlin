<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BottomSheet Dialog-->
    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>

    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/eerie_black</item>
    </style>

    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:popupBackground">@color/translucid_eerie_black</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemIconTint">@drawable/tab_icon</item>
        <item name="itemTextColor">@drawable/tab_icon</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/eerie_black</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <item name="closeIcon">@drawable/ic_clear_white_24dp</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="paddingStart">20dp</item>
    </style>

</resources>